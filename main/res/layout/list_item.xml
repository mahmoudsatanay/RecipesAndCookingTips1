<?xml verintLayoutsion="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
       android:id="@+id/book_imageview"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:src="@drawable/ChocolatedubaiImage"/>

    <TextView
        android:id="@+id/title_testview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/book_imageview"
        android:text="ChocolatedubaiImage"
        android:textSize="22sp"/>

    <TextView
       android:id="@+id/author_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/book_imageview"
        android:layout_below="@+id/title_testview"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:text="Sweet Arabic"
        android:textSize="18sp"/>



</RelativeLayout>